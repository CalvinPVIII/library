<h3>Books</h3>
<% if @books.any? %>
<ul>
  <% @books.each do |book| %>
  <li><a href="/patrons/<%= @patron.id %>/books/<%= book.id %>"><%= book.name %></a></li>
  <% end %>
</ul>
<% else %>
<p>There are currently no books to display.</p>
<% end %>
<a href="/patrons/<%= @patron.id %>/books/new">Add a Book</a>
